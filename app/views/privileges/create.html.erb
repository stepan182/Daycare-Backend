<div class="col-md-6 col-md-offset-3">
	<div class="panel panel-default">
		<div class="panel-heading">
		  <h4>Apple Customer Privileges</h4>
  		</div>

		<div class="panel-body">

		    <%= form_for @privilege, url: create_update_privileges_path , html: {role: "form"} do |f| %>
		    
            <div class="form-group col-md-offset-1" style="padding-left:20px;">
                
            <div id="ck-button">
                <label>
                    <input type="checkbox" <%= "checked" if @permissions.to_s.include?("to_do") %> name="privilege_ids[]" value="1" hidden="hidden"/><span><nobr>To Do</nobr></span>
                </label>
            </div>
            
            <div id="ck-button">
                <label>
                    <input type="checkbox" <%= "checked" if @permissions.to_s.include?("attendance") %> name="privilege_ids[]" value="2" hidden="hidden"/><span><nobr>Attendance</nobr></span>
                </label>
            </div>
            
            <div id="ck-button">
                <label>
                    <input type="checkbox" <%= "checked" if @permissions.to_s.include?("message") %> name="privilege_ids[]" value="3" hidden="hidden"/><span><nobr>Message</nobr></span>
                </label>
            </div>
            
            </div>
            
            <br class="clear" /><br/>
            
            <div class="form-group col-md-offset-1" style="padding-left:20px;">
                
            <div id="ck-button">
                <label>
                    <input type="checkbox" <%= "checked" if @permissions.to_s.include?("allergy") %> name="privilege_ids[]" value="4" hidden="hidden"/><span><nobr>Allergy</nobr></span>
                </label>
            </div>
            
            <div id="ck-button">
                <label>
                    <input type="checkbox" <%= "checked" if @permissions.to_s.include?("medication") %> name="privilege_ids[]" value="5" hidden="hidden"/><span><nobr>Medication</nobr></span>
                </label>
            </div>
            
            <div id="ck-button">
                <label>
                    <input type="checkbox" <%= "checked" if @permissions.to_s.include?("notice_board") %> name="privilege_ids[]" value="6" hidden="hidden"/><span><nobr>Notice Board</nobr></span>
                </label>
            </div>
            
            </div>
            
            <br class="clear" /><br/>
            
            <div class="form-group col-md-offset-1" style="padding-left:20px;">
                
            <div id="ck-button">
                <label>
                    <input type="checkbox" <%= "checked" if @permissions.to_s.include?("calendar") %> name="privilege_ids[]" value="7" hidden="hidden"/><span><nobr>Calendar</nobr></span>
                </label>
            </div>
            
            <div id="ck-button">
                <label>
                    <input type="checkbox" <%= "checked" if @permissions.to_s.include?("intolerance") %> name="privilege_ids[]" value="8" hidden="hidden"/><span><nobr>Intolerance</nobr></span>
                </label>
            </div>
            
            </div>
            
              <input type="hidden" name="customer_ids" value="<%= @selected_customers.join(", ") %>">
            
            <br class="clear" /><br/><br/>
            <div>
              <a href="/privileges" class="btn btn-default">Back</a>
              <%= f.submit "Apply", class: "btn btn-primary pull-right" %>
            </div>
            <%end%>
            
        </div>
		
	</div>
</div>


<!-- Scripts and styles -->
<script>

    $(function(){
        $("#slogan").html("PRIVILEGES");
        
    });
</script>

