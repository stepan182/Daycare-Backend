<br/>
<% if @allergy.errors.any? %>
  <div id="error_explanation" class="col-md-6 col-md-offset-3">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@allergy.errors.count, "error") %>.
    </div>
    <ul class="red">
    <% @allergy.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="col-md-6 col-md-offset-3">
	<div class="panel panel-default">
		<div class="panel-heading">
		  <h4>Add New Allergy</h4>
  		</div>

		<div class="panel-body">
					
		<%= form_for(@allergy, html: { multipart: true }) do |f| %>
		  
		      <div class="form-group">
              <%= f.label :allergy_name%>
              <%= f.text_field(:allergy_name, {class: "form-control", required: "true"}) %>
          </div>
          
          <div class="form-group">
              <%= f.label :icon%>
              <%= f.file_field :icon, accept: 'image/jpeg,image/gif,image/png' %>
          </div>
          
          <div class="form-group">
              <%= f.label :description%>
              <%= f.text_area(:description, cols: 20, rows: 10, class: "form-control") %>
          </div>
          
          <br/><br/>
          <div class="col-md-offset-5">
              <%= f.submit "Create", class: "btn btn-primary" %>
          </div>
        <% end %>
					
		</div>
		
	</div>
</div>

